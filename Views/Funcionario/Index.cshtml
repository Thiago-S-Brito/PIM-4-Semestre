@model IEnumerable<PIM_4.Models.Funcionario>

@{
    ViewData["Title"] = "Index";
}

<h1 class="texto-negrito-titulo">Funcionários</h1>

<p>
    <a asp-action="Create"class="meu-botao">Criar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CPF)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cargo)
            </th>
            <th>
               Data Nascimento
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CPF)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cargo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataNascimento)
            </td>
            <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.IdFuncionario  }, new { @class = "button-lista editar" }) 
                    @Html.ActionLink("Detalhes", "Details", new { id = item.IdFuncionario  }, new { @class = "button-lista detalhes" }) 
                    @Html.ActionLink("Deletar", "Delete", new { id = item.IdFuncionario  }, new { @class = "button-lista deletar" })
            </td>
        </tr>
}
    </tbody>
</table>
