@model PIM_4.Models.Pagamento

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Pagamento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FormaDePagamento" class="control-label"></label>
                <input asp-for="FormaDePagamento" class="form-control" />
                <span asp-validation-for="FormaDePagamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comanda" class="control-label"></label>
                <input asp-for="Comanda" class="form-control" />
                <span asp-validation-for="Comanda" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdPagamento" class="control-label campo-display"></label>
                <input asp-for="IdPagamento" class="form-control campo-display" />
                <span asp-validation-for="IdPagamento" class="text-danger campo-display"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="button-lista deletar">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
